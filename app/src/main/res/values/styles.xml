<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#5D80FC</item>
        <item name="colorPrimaryDark">@color/colorPrimary1C</item>
        <item name="colorAccent">@color/colorAccentD7</item>
        <!--overlay-->
        <item name="android:windowContentOverlay">@null</item>
        <!--app color-->
        <item name="android:textColorPrimary">@color/colorPrimaryFB</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">sans</item>
        <item name="drawerArrowStyle">@style/MaterialDrawer.DrawerArrowStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_chevron_left_black_24dp</item>
    </style>

    <style name="MaterialDrawer.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

    <!-- Splash Screen theme. -->
    <style name="SplashTheme" parent="AppTheme">
    </style>

    <style name="Toolbar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

</resources>
